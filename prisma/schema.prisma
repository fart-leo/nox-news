generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"          // ВАЖНО: здесь строка, не env()
  url      = env("DATABASE_URL")
}

model Article {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  url         String   @unique
  urlHash     String   @unique
  source      String
  summary     String?
  content     String?
  imageUrl    String?
  tags        String?
  publishedAt DateTime
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
